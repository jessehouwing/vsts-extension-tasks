        {
            "name": "TfxLocation",
            "type": "filePath",
            "label": "Tfx Location",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "GlobalOptions"
        },
        {
            "name": "BypassValidation",
            "type": "boolean",
            "label": "Bypass Validation",
            "defaultValue": "false",
            "required": true,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        },
        {
            "name": "Preview",
            "type": "boolean",
            "label": "Preview",
            "defaultValue": "true",
            "required": true,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        },
        {
            "name": "ShareWith",
            "type": "multiLine",
            "label": "Share with",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": ""
        }
    ],
    "instanceNameFormat": "Share VSTS Extension: $(PublisherID)-$(ExtensionID) with: $(ShareWith)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\vsts-extension-share.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
